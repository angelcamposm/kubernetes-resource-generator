{
    "name": "acamposm/kubernetes-resource-generator",
    "description": "a PHP package to generate yaml files of Kubernetes resources.",
    "keywords": [
        "php81", "kubernetes", "resource", "yaml", "pod", "service", "deployment"
    ],
    "type": "library",
    "authors": [
        {
            "name": "Angel",
            "email": "angel.campos.m@outlook.com",
            "role": "developer"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "ext-json": "*",
        "symfony/yaml": "v6.1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.25"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Acamposm\\KubernetesResourceGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Acamposm\\KubernetesResourceGenerator\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "scripts": {
        "phpunit:run": "phpunit --colors --configuration phpunit.xml --testdox"
    }
}
